#include <stdio.h>

int binarySearchDescendingWithSwaps(int arr[], int n, int key) {
    int low = 0, high = n - 1;
    int swaps = 0;  // counts number of iterations/comparisons

    while (low <= high) {
        swaps++;
        int mid = (low + high) / 2;

        if (arr[mid] == key) {
            printf("Element found at index %d\n", mid);
            printf("Total swaps: %d\n", swaps);
            return mid;
        }
        // for descending order, conditions are reversed
        else if (arr[mid] > key)
            low = mid + 1;  // move right
        else
            high = mid - 1; // move left
    }

    printf("Element not found in the array\n");
    printf("Total swaps: %d\n", swaps);
    return -1;
}

int main() {
    int n, key;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d elements in descending order: ", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter element to search: ");
    scanf("%d", &key);

    binarySearchDescendingWithSwaps(arr, n, key);

    return 0;
}
