#include <stdio.h>

int main() {
    int arr[100], n;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements: ", n);
    for (int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    // Sorting using linear search concept
    for (int i = 0; i < n - 1; i++) {
        int minIndex = i;

        // Linear search for smallest element in the remaining array
        for (int j = i + 1; j < n; j++) {
            if (arr[j] < arr[minIndex])
                minIndex = j;
        }

        // Swap smallest element with current element
        int temp = arr[i];
        arr[i] = arr[minIndex];
        arr[minIndex] = temp;
    }

    printf("\nSorted array in ascending order: ");
    for (int i = 0; i < n; i++)
        printf("%d ", arr[i]);

    return 0;
}
